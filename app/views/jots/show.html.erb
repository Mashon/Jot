<div class="wrapper">
  <div class="container">
    <div class="int_show">
      <p id="notice"><%= notice %></p>

      <div>
        <strong>Title:</strong>
        <%= @jot.title %>
      </div>
      <br>
      <div>

        <%= @jot.body %>
      </div>
      <br>
      <div>
        <strong>Tags:</strong>
        <%= raw @jot.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
      </div>
      <br>
      <%= link_to 'Edit', edit_jot_path(@jot) %>
      |
      <%= link_to 'Back', jots_path %>
    </div>
  </div>
</div>
